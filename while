#include <iostream>
#include <ctime>
using namespace std;

int main() {
	srand(time(NULL));

	setlocale(0, "");

	while (true) {
		system("cls");
		cout << "Меню\n";
		cout << "1. Играть\n";
		cout << "2. Настройки\n";
		cout << "3. Выход\n\n";
		cout << "Введите: ";
		short menu;
		cin >> menu;

		if (menu == 1) {
			system("cls");
			cout << "Добро пожалоать в игру\n\n";

			cout << "Я сгенерировал число от 0 - 3, угадай: ";
			int comprandom = rand() % 4;
			int answer;
			cin >> answer;

			if (answer == comprandom) {
				cout << "\x1b[92mВы выйграли!!!\x1b[0m" << endl;
			}
			else {
				cout << "\x1b[91mВы проиграли!!!\x1b[0m" << endl;
			}

			system("pause");
		}
		else if (menu == 3) {
			break;
		}

	}
	int _;
	cin >> _;

	return 0;

		
}
