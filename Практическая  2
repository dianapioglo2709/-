#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	cout << "Программа 'Времена года'"
		<< endl;
	cout << "[1] Лето" << endl;
	cout << "[2] Осень" << endl;
	cout << "[3] Зима" << endl;
	cout << "[4] Весна" << endl;
	cout << "-------------" << endl;
	int выбор_пользователя;
	cout << "Введите значение: ";
	cin >> выбор_пользователя;
	if (выбор_пользователя == 1) {
		cout << "Сейчас лето, можно отдыхать!" << endl;
	}
	else if (выбор_пользователя == 2) {
		cout << "Сейчас осень, следует одется тепло и взять с собой зонт." << endl;
	}
	else if (выбор_пользователя == 3) {
		cout << "Сейчас зима, пора играть в снежки и пить горячий чай." << endl;
	}
	else if (выбор_пользователя == 4) {
		cout << "Сейчас весна, погода переменчива." << endl;
	}
	else {
		cout << "Такого времени года нет." << endl;
	}
	return 0;
}
