#include <iostream>

using namespace std;

int main() {
	setlocale(LC_ALL, "Rus");
	int chislo;
	int switchval;
	string sep = "Сентябрь";
	string oct = "Октябрь";
	string nov = "Ноябрь";
	string dec = "Декабрь";
	string yanv = "Январь";
	string feb = "Февраль";
	string mar = "Март";
	string apr = "Апрель";
	string may = "Май";
	string jun = "Июнь";
	string jul = "Июль";
	string aug = "Август";

