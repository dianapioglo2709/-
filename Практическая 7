		case 9:
			cout << "Выбран месяц: " << sep << endl;
			if (switchval == 9) {
				cout << "Выберите день: ";
				cin >> chislo;
			}
			if (chislo >= 1 && chislo <= 30){
				cout << "\nКалендарь: " << chislo << " " << sep;
			}
			else {
				cout << "Ошибка, перезапустите программу";
			}
			break;
		case 10:
			cout << "Выбран месяц: " << oct << endl;
			if (switchval == 10) {
				cout << "Выберите день: ";
				cin >> chislo;
			}
			if (chislo >= 1 && chislo <= 31) {
				cout << "\nКалендарь: " << chislo << " " << oct;
