			if (chislo >= 1 && chislo <= 30) {
				cout << "\nКалендарь: " << chislo << " " << apr;
			}
			else {
				cout << "Ошибка, перезапустите программу";
			}
			break;
		case 5:
			cout << "Выбран месяц: " << may << endl;
			if (switchval == 5) {
				cout << "Выберите день: ";
				cin >> chislo;
			}
			if (chislo >= 1 && chislo <= 31) {
				cout << "\nКалендарь: " << chislo << " " << may;
			}
			else {
				cout << "Ошибка, перезапустите программу";
			}
			break;
		case 6:
			cout << "Выбран месяц: " << jun << endl;
			if (switchval == 6) {
				cout << "Выберите день: ";
				cin >> chislo;
			}
			if (chislo >= 1 && chislo <= 30) {
				cout << "\nКалендарь: " << chislo << " " << jun;
			}
			else {
				cout << "Ошибка, перезапустите программу";
			}
			break;
		case 7:
			cout << "Выбран месяц: " << jul << endl;
			if (switchval == 7) {
