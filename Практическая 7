			cout << "Выбран месяц: " << dec << endl;
			if (switchval == 12) {
				cout << "Выберите день: ";
				cin >> chislo;
			}
			if (chislo >= 1 && chislo <= 31) {
				cout << "\nКалендарь: " << chislo << " " << dec;
			}
			else {
				cout << "Ошибка, перезапустите программу";
			}
			break;
		case 1:
			cout << "Выбран месяц: " <<yanv << endl;
			if (switchval == 1) {
				cout << "Выберите день: ";
				cin >> chislo;
			}
			if (chislo >= 1 && chislo <= 31) {
				cout << "\nКалендарь: " << chislo << " " << yanv;
			}
			else {
				cout << "Ошибка, перезапустите программу";
			}
			break;
		case 2:
			cout << "Выбран месяц: " << feb << endl;
			if (switchval == 2) {
				cout << "Выберите день: ";
				cin >> chislo;
			}
			if (chislo >= 1 && chislo <= 28) {
				cout << "\nКалендарь: " << chislo << " " << feb;
			}
			else {
				cout << "Ошибка, перезапустите программу";
			}
			break;
		case 3:
			cout << "Выбран месяц: " << mar << endl;
			if (switchval == 3) {
				cout << "Выберите день: ";
				cin >> chislo;
			}
			if (chislo >= 1 && chislo <= 31) {
				cout << "\nКалендарь: " << chislo << " " << mar;
			}
			else {
				cout << "Ошибка, перезапустите программу";
			}
			break;
