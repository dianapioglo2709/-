	cout << "\n[ 1 ] Январь";
	cout << "\n[ 2 ] Февраль";
	cout << "\n[ 3 ] Март";
	cout << "\n[ 4 ] Апрель";
	cout << "\n[ 5 ] Май";
	cout << "\n[ 6 ] Июнь";
	cout << "\n[ 7 ] Июль";
